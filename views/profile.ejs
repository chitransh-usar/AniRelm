    <script>
      // Update file status when file is selected
      document
        .getElementById("file-input")
        .addEventListener("change", function () {
          const fileStatus = document.querySelector(".file-status");
          if (this.files.length > 0) {
            fileStatus.textContent = this.files[0].name;
          } else {
            fileStatus.textContent = "No file chosen";
          }
        });

      // Upload form toggle functionality
      document
        .getElementById("upload-toggle-btn")
        .addEventListener("click", function () {
          const uploadForm = document.getElementById("upload-form-container");
          const buttonSection = document.querySelector(
            ".upload-button-section"
          );

          // Hide the button and show the form
          buttonSection.style.display = "none";
          uploadForm.style.display = "block";
        });

      // Cancel upload functionality
      function cancelUpload() {
        const uploadForm = document.getElementById("upload-form-container");
        const buttonSection = document.querySelector(".upload-button-section");

        // Hide the form and show the button
        uploadForm.style.display = "none";
        buttonSection.style.display = "flex";

        // Reset form fields
        const form = document.getElementById("upload-form");
        form.reset();
        document.querySelector(".file-status").textContent = "No file chosen";
      }

      // Profile picture upload functionality
      document
        .querySelector(".profile-pic-container")
        .addEventListener("click", function () {
          document.getElementById("profile-pic-input").click();
        });

      document
        .getElementById("profile-pic-input")
        .addEventListener("change", function () {
          if (this.files.length > 0) {
            const file = this.files[0];
            const formData = new FormData();
            formData.append("profilePic", file);

            fetch("/upload-profile-pic", {
              method: "POST",
              body: formData,
            })
              .then((response) => response.json())
              .then((data) => {
                if (data.success) {
                  // Update the profile picture with the saved filename
                  document.querySelector(".profile-pic").src =
                    "/images/uploads/" + data.filename;
                  alert("Profile picture uploaded successfully!");
                } else {
                  alert("Failed to upload profile picture: " + data.message);
                }
              })
              .catch((error) => {
                console.error("Error:", error);
                alert("Error uploading profile picture. Please try again.");
              });
          }
        });

      // Handle upload form submission
      document
        .getElementById("upload-form")
        .addEventListener("submit", function (e) {
          // Show loading state
          const submitBtn = this.querySelector(".submit-btn");
          const originalText = submitBtn.textContent;
          submitBtn.textContent = "Uploading...";
          submitBtn.disabled = true;

          // The form will submit normally, and the backend will redirect to /profile
          // which will refresh the page and show the upload button again
        });

      // Reset form after successful upload (when page loads)
      window.addEventListener("load", function () {
        const uploadForm = document.getElementById("upload-form-container");
        const buttonSection = document.querySelector(".upload-button-section");

        // If form is visible, hide it and show button
        if (uploadForm.style.display === "block") {
          uploadForm.style.display = "none";
          buttonSection.style.display = "flex";
        }

        // Reset form fields
        const form = document.getElementById("upload-form");
        form.reset();
        document.querySelector(".file-status").textContent = "No file chosen";

        // Show success message if upload was successful
        const urlParams = new URLSearchParams(window.location.search);
        if (urlParams.get("upload") === "success") {
          const successMessage = document.getElementById("success-message");
          successMessage.style.display = "block";

          // Hide message after 5 seconds
          setTimeout(() => {
            successMessage.style.display = "none";
          }, 5000);
        }
      });

      // Image modal functionality
      const modal = document.getElementById("imageModal");
      const modalImg = document.getElementById("modalImage");
      const deleteBtn = document.getElementById("deleteBtn");
      const closeBtn = document.querySelector(".close");

      let currentPostId = "";

      function openImageModal(imageSrc, caption, postId) {
        modal.style.display = "block";
        modalImg.src = imageSrc;
        currentPostId = postId;
      }

      // Saved image modal functionality
      const savedModal = document.getElementById("savedImageModal");
      const savedModalImg = document.getElementById("savedModalImage");
      const unsaveBtn = document.getElementById("unsaveBtn");
      const closeSavedBtn = document.querySelector(".close-saved");

      let currentSavedImageIndex = -1;

      function openSavedImageModal(imageSrc, caption, index) {
        savedModal.style.display = "block";
        savedModalImg.src = imageSrc;
        currentSavedImageIndex = index;
      }

      // Add click event listeners for saved images
      document.addEventListener("DOMContentLoaded", function () {
        const savedImages = document.querySelectorAll(".saved-image-clickable");
        savedImages.forEach(function (img) {
          img.addEventListener("click", function () {
            const imageUrl = this.getAttribute("data-image-url");
            const caption = this.getAttribute("data-caption");
            const index = parseInt(this.getAttribute("data-index"));
            openSavedImageModal(imageUrl, caption, index);
          });
        });
      });

      // Close modal when clicking X
      closeBtn.onclick = function () {
        modal.style.display = "none";
      };

      // Close saved modal when clicking X
      closeSavedBtn.onclick = function () {
        savedModal.style.display = "none";
      };

      // Close modal when clicking outside
      window.onclick = function (event) {
        if (event.target == modal) {
          modal.style.display = "none";
        }
        if (event.target == savedModal) {
          savedModal.style.display = "none";
        }
      };

      // Close modal with Escape key
      document.addEventListener("keydown", function (event) {
        if (event.key === "Escape") {
          modal.style.display = "none";
          savedModal.style.display = "none";
        }
      });

      // Delete image functionality
      deleteBtn.addEventListener("click", async function () {
        if (!currentPostId) {
          alert("No post selected for deletion");
          return;
        }

        if (
          confirm(
            "Are you sure you want to delete this image? This action cannot be undone."
          )
        ) {
          try {
            const response = await fetch("/delete-post", {
              method: "POST",
              headers: {
                "Content-Type": "application/json",
              },
              body: JSON.stringify({
                postId: currentPostId,
              }),
            });

            const data = await response.json();

            if (data.success) {
              alert("Image deleted successfully!");
              modal.style.display = "none";
              // Reload the page to reflect changes
              location.reload();
            } else {
              alert("Failed to delete image: " + data.message);
            }
          } catch (error) {
            console.error("Error deleting image:", error);
            alert("Failed to delete image. Please try again.");
          }
        }
      });

      // Unsave image functionality
      unsaveBtn.addEventListener("click", async function () {
        if (currentSavedImageIndex === -1) {
          alert("No saved image selected for unsaving");
          return;
        }

        if (
          confirm(
            "Are you sure you want to unsave this image? This action cannot be undone."
          )
        ) {
          try {
            const response = await fetch("/unsave-image", {
              method: "POST",
              headers: {
                "Content-Type": "application/json",
              },
              body: JSON.stringify({
                imageIndex: currentSavedImageIndex,
              }),
            });

            const data = await response.json();

            if (data.success) {
              alert("Image unsaved successfully!");
              savedModal.style.display = "none";
              // Reload the page to reflect changes
              location.reload();
            } else {
              alert("Failed to unsave image: " + data.message);
            }
          } catch (error) {
            console.error("Error unsaving image:", error);
            alert("Failed to unsave image. Please try again.");
          }
        }
      });
    </script>
